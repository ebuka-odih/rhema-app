{
  "expo": {
    "name": "Rhema Daily",
    "slug": "rhema",
    "scheme": "rhema",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.svg",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo.svg",
      "resizeMode": "contain",
      "backgroundColor": "#0D0D0D"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.odih.rhema",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Rhema Daily needs access to your microphone to record and transcribe sermons.",
        "NSPhotoLibraryUsageDescription": "Rhema Daily needs access to your photo library to save generated content."
      }
    },
    "android": {
      "package": "com.odih.rhema",
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.svg",
        "backgroundColor": "#0D0D0D"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "plugins": [
      [
        "expo-audio",
        {
          "microphonePermission": "Allow Wordflow to access your microphone"
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "b9182640-8da5-4379-909a-53ab74c46bcd"
      }
    },
    "owner": "odih"
  }
}
