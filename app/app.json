{
  "expo": {
    "name": "Rhema Daily",
    "slug": "wordflow",
    "scheme": "wordflow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#E8503A"
    },
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D0D0D"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.odih.wordflow",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Rhema Daily needs access to your microphone to record and transcribe sermons.",
        "NSPhotoLibraryUsageDescription": "Rhema Daily needs access to your photo library to save generated content."
      }
    },
    "android": {
      "package": "com.odih.wordflow",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D0D0D"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "plugins": [
      [
        "expo-audio",
        {
          "microphonePermission": "Allow Wordflow to access your microphone"
        }
      ],
      "@react-native-community/datetimepicker",
      "@react-native-google-signin/google-signin"
    ],
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "owner": "odih",
    "extra": {
      "eas": {
        "projectId": "44d3ac4c-732f-45f7-ac0d-17471876a5bb"
      }
    }
  }
}
